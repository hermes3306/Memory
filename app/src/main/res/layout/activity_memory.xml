<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Top layer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/alarmButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_alarm_ht"
            android:background="@android:color/transparent"
            android:contentDescription="Alarm"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/find_search"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search"
            android:background="@drawable/rounded_edittext_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/syncButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/update"
            android:background="@android:color/transparent"
            android:contentDescription="update"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit_memory"
            android:background="@android:color/transparent"
            android:contentDescription="Edit"
            android:scaleType="fitCenter" />

    </LinearLayout>


    <!-- Existing content -->
    <com.jason.memory.ZoomableRecyclerView
        android:id="@+id/memoriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"/>

    <!-- Updated bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconChat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ht_chat"
                android:contentDescription="Chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconRun"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ht_run"
                android:contentDescription="Run" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconMemory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ht_memory_blue"
                android:contentDescription="memory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconPlace"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ht_place"
                android:contentDescription="place" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconMe"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ht_my"
                android:contentDescription="My" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Hidden save button -->
    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/savetocloud"
        android:background="@android:color/transparent"
        android:contentDescription="Save"
        android:scaleType="fitCenter"
        android:layout_gravity="bottom|center"
        android:visibility="gone" />

</FrameLayout>