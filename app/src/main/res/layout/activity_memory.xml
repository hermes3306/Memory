<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Top layer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/alarmButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_alarm_ht"
            android:background="@android:color/transparent"
            android:contentDescription="Alarm"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" />

<!--        <ImageButton-->
<!--            android:id="@+id/searchButton"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:src="@drawable/find_search"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:contentDescription="Search"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:layout_marginEnd="8dp" />-->

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search"
            android:background="@drawable/rounded_edittext_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="text"
            android:imeOptions="actionSearch" />


        <ImageButton
            android:id="@+id/syncButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/update"
            android:background="@android:color/transparent"
            android:contentDescription="update"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit_black"
            android:background="@android:color/transparent"
            android:contentDescription="Edit"
            android:scaleType="fitCenter" />

    </LinearLayout>


    <!-- Existing content -->
    <com.jason.memory.ZoomableRecyclerView
        android:id="@+id/memoriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"/>

    <include layout="@layout/layout_bottom_navigation" />


</FrameLayout>