<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#808080"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Memory의 제목을 입력하세요."
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="text"
        android:padding="16dp"
        android:background="@null"
        android:textColor="#666666"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleEditText"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/memoryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1. Memory를 게시합니다. 이는 여러분의 경험입니다.\n\n2. 사진이나 음성 메모를 추가하여 Memory를 더욱 돋보이게 만드세요.\n\n3. 여러개의 태그를 추가하면 Memory가 눈에 띄고 여러분에게 전해질 수 있습니다."
                android:gravity="top"
                android:padding="16dp"
                android:background="@null"
                android:textColor="#666666"
                android:textSize="14sp"
                android:minHeight="200dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/imagePreviewContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" />

            </HorizontalScrollView>

            <TextView
                android:id="@+id/hashtagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Memory"
                android:textColor="#2196F3"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/addPlaceInfoImage"
            style="@style/BottomBarImageButton"
            android:src="@drawable/ic_place" />

        <ImageButton
            android:id="@+id/audioButton"
            style="@style/BottomBarImageButton"
            android:src="@drawable/ic_mic32" />

        <ImageButton
            android:id="@+id/imageButton"
            style="@style/BottomBarImageButton"
            android:src="@drawable/ic_pic32" />

        <ImageButton
            android:id="@+id/emojiButton"
            style="@style/BottomBarImageButton"
            android:src="@drawable/ic_emoji" />

        <ImageButton
            android:id="@+id/searchButton"
            style="@style/BottomBarImageButton"
            android:src="@drawable/ic_search32" />

        <ImageButton
            android:id="@+id/deleteImage"
            style="@style/BottomBarImageButton"
            android:src="@drawable/ic_trash32" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>