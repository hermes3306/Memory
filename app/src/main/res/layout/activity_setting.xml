<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Keep Screen On switch -->
        <Switch
            android:id="@+id/switchKeepScreenOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep Screen On"
            android:layout_marginTop="16dp"/>

        <!-- Run Type Layout -->
        <LinearLayout
            android:id="@+id/idnew_runTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run:"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"/>

            <RadioGroup
                android:id="@+id/idnew_runTypeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp">

                <RadioButton
                    android:id="@+id/idnew_memoryRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memory"
                    android:layout_marginRight="16dp"/>

                <RadioButton
                    android:id="@+id/idnew_momentRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moment"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Save Type Layout -->
        <LinearLayout
            android:id="@+id/idnew_saveTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save:"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp">

                <CheckBox
                    android:id="@+id/idnew_save_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server"
                    android:layout_marginRight="16dp"/>

                <CheckBox
                    android:id="@+id/idnew_save_Strava"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strava"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Download and Upload Files Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/fileDownloadButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dn"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/fileUploadButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Up"
                android:layout_marginStart="4dp"/>

            <Button
                android:id="@+id/listServerFilesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Serv"
                android:layout_marginEnd="4dp"/>
        </LinearLayout>

        <!-- Initialize and Migrate Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/initActivityButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Init"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/migrateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mig"
                android:layout_marginStart="4dp"/>

            <Button
                android:id="@+id/listActivitiesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Act"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- List, Delete, and File Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/fileViewButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View"
                android:layout_marginStart="4dp"/>
            <Button
                android:id="@+id/deleteFilesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Del"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/listFilesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="File"
                android:layout_marginEnd="4dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:maxLines="4"
            android:ellipsize="end"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>